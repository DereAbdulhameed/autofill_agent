{
  "manifest_version": 3,
  "name": "EMR Smart Autofill",
  "version": "1.0.0",
  "description": "Auto-transfer transcripts from transcription app to EMR and auto-fill forms",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://transcribe.intron.health/*",
    "https://voice.intron.io/*"
  ],
  "background": {
    "service_worker": "background-service.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://transcribe.intron.health/*",
        "https://voice.intron.io/*"
      ],
      "js": ["content-cross-tab.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "EMR Smart Autofill",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}
